<h2><%= @cocktail.name %></h2>
<% @cocktail.doses.each do |dose| %>
  <p> <%= dose.description %> </p>
  <% end %>

<%= link_to 'Back', cocktails_path %>
<%= link_to 'Add ingredient', new_cocktail_dose_path(@cocktail) %>
<%= link_to "Delete",
            cocktail_path(@cocktail),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
